{
  "name": "duolingo-desktop",
  "appId": "com.electron.${name}",
  "productName": "Duolingo",
  "version": "2.0.0",
  "description": "A desktop client for Duolingo",
  "main": "scripts/init.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "linux": {
      "target": [
        "zip",
        "AppImage",
        "deb",
        "apk"
      ],
      "category": "Education",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "duolingo-desktop.desktop"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmlendea/duolingo-desktop.git"
  },
  "keywords": [
    "Electron",
    "Duolingo"
  ],
  "author": "Hora»õiu Mlendea <Mlendea.Horatiu@GMail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "app-module-path": "2.2.0"
  },
  "devDependencies": {
    "electron": "^8.5.2",
    "electron-builder": "^22.5.1"
  }
}
